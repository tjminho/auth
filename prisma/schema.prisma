generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===== Enums =====
enum VerificationType {
  EMAIL
  PASSWORD_RESET
}

enum Role {
  USER
  MODERATOR
  ADMIN
  SUPER_ADMIN
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  DELETED
  PENDING
  BLOCKED
}

enum SubscriptionStatus {
  trial
  pending_payment
  active
  inactive
  cancelled
}

// ===== Models =====
model User {
  id                     String     @id @default(uuid())
  name                   String?
  email                  String?    @unique @db.VarChar(255) // 원본 이메일, nullable
  trustedEmail           String?    @unique // 검증 완료된 대표 이메일
  emailVerified          DateTime?
  lastVerificationSentAt DateTime?
  provider               String?
  password               String?    @db.Text
  image                  String?
  unverified             Boolean    @default(false)
  role                   Role       @default(USER)
  status                 UserStatus @default(ACTIVE)
  mfaEnabled             Boolean    @default(false)
  mfaSecret              String?    @db.Text
  mfaVerifiedAt          DateTime?
  deletedAt              DateTime?
  lastProvider           String?
  subscriptionExpiresAt  DateTime?

  // 관계
  accounts             Account[]
  sessions             Session[]
  verifiedEmails       VerifiedEmail[]
  verificationSessions VerificationSession[]
  passwordResets       PasswordResetToken[]
  createdCompanies     Company[]             @relation("CompanyCreator")
  adminCompanies       Company[]             @relation("CompanyAdmin")
  loginHistory         LoginHistory[]
  FcmToken             FcmToken[]

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  AuditLog  AuditLog[]

  @@unique([provider, email]) // provider+email 조합 중복 방지
  @@index([status])
  @@index([email])
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  email             String?
  access_token      String? @db.Text
  refresh_token     String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@index([email])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Verification {
  id         String           @id @default(uuid())
  identifier String           @db.VarChar(255)
  userId     String
  value      String
  type       VerificationType
  expiresAt  DateTime
  consumedAt DateTime?
  createdAt  DateTime         @default(now())

  @@index([userId, type])
  @@index([identifier])
  @@index([value])
}

model VerificationSession {
  vid        String           @id @default(uuid())
  userId     String
  email      String? // ✅ nullable 처리
  type       VerificationType @default(EMAIL)
  expiresAt  DateTime
  createdAt  DateTime         @default(now())
  verifiedAt DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, email, type])
  @@index([expiresAt])
}

model VerifiedEmail {
  id         String   @id @default(uuid())
  email      String
  userId     String
  verifiedAt DateTime @default(now())
  ipAddress  String?
  userAgent  String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, email])
  @@index([userId])
}

model Company {
  id          String  @id @default(uuid())
  name        String
  subdomain   String  @unique
  email       String  @unique
  phoneNumber String?
  address     String?

  createdBy String?
  creator   User?   @relation("CompanyCreator", fields: [createdBy], references: [id], onDelete: SetNull)
  adminId   String?
  admin     User?   @relation("CompanyAdmin", fields: [adminId], references: [id], onDelete: SetNull)

  subscriptionStatus SubscriptionStatus @default(trial)
  trialEndsAt        DateTime?
  expiresAt          DateTime?

  billingEmail  String?
  lastInvoiceAt DateTime?

  canceledAt           DateTime?
  dataRetentionUntil   DateTime?
  deletionNoticeSentAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdBy])
  @@index([adminId])
  @@index([subscriptionStatus])
  @@index([expiresAt])
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  userId    String
  email     String
  token     String // ✅ unique 제거, 대신 인덱스
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([email, used])
  @@index([token, used])
}

model LoginHistory {
  id        String   @id @default(uuid())
  userId    String
  provider  String
  ip        String   @db.Text
  userAgent String   @db.Text
  location  String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model FcmToken {
  id         String    @id @default(uuid())
  token      String    @unique
  userId     String
  createdAt  DateTime  @default(now())
  lastUsedAt DateTime? // ✅ 토큰 만료/갱신 관리용 필드 추가

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String
  action    String // 예: "EMAIL_VERIFIED", "LOGIN_SUCCESS", "PASSWORD_RESET"
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}
