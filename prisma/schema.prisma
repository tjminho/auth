generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===== Enums =====

enum VerificationType {
  EMAIL
  PASSWORD_RESET
}

enum Role {
  USER
  MODERATOR
  ADMIN
  SUPER_ADMIN
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  DELETED
  PENDING
  BLOCKED
}

enum SubscriptionStatus {
  trial
  pending_payment
  active
  inactive
  cancelled
}

// ===== Models =====

model User {
  id                     String     @id @default(uuid())
  name                   String?
  // 원본 이메일(소셜/프로바이더 제공). nullable. 단일 unique 없음.
  email                  String?
  // 검증 완료된 대표 이메일(VerifiedEmail 중 선택). 단일 unique.
  trustedEmail           String?    @unique
  emailVerified          DateTime?
  lastVerificationSentAt DateTime?
  provider               String? // 최초 가입 시 사용한 provider 식별자
  password               String?    @db.VarChar(255)
  image                  String?
  unverified             Boolean    @default(false)
  role                   Role       @default(USER)
  status                 UserStatus @default(ACTIVE)
  mfaEnabled             Boolean    @default(false)
  mfaSecret              String?    @db.VarChar(255) // 저장 시 암호화/해싱 권장
  mfaVerifiedAt          DateTime?
  deletedAt              DateTime?

  // 관계
  accounts             Account[]
  sessions             Session[]
  verifiedEmails       VerifiedEmail[]
  createdCompanies     Company[]             @relation("CompanyCreator")
  adminCompanies       Company[]             @relation("CompanyAdmin")
  loginHistory         LoginHistory[]
  verificationSessions VerificationSession[]

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  FcmToken  FcmToken[]

  // 소셜/프로바이더 + 이메일 복합 고유 (중복 계정 방지)
  @@unique([provider, email])
  @@index([status])
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  access_token      String? @db.Text
  refresh_token     String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Verification {
  id         String           @id @default(uuid())
  identifier String           @db.VarChar(255) // 이메일 또는 사용자 ID
  userId     String
  value      String
  type       VerificationType
  expiresAt  DateTime
  consumedAt DateTime?
  createdAt  DateTime         @default(now())

  // consumedAt IS NULL 조건 유니크는 raw SQL partial index로 migration에서 추가하세요.
  @@index([identifier])
  @@index([value])
  @@index([userId])
}

model VerifiedEmail {
  id         String   @id @default(uuid())
  email      String
  userId     String
  verifiedAt DateTime @default(now())
  ipAddress  String?
  userAgent  String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, email])
  @@index([userId])
}

model Company {
  id          String  @id @default(uuid())
  name        String
  subdomain   String  @unique
  email       String  @unique
  phoneNumber String?
  address     String?

  // 생성자/관리자 관계 (사용자 삭제 시 회사 보존을 위해 SetNull)
  createdBy String?
  creator   User?   @relation("CompanyCreator", fields: [createdBy], references: [id], onDelete: SetNull)
  adminId   String?
  admin     User?   @relation("CompanyAdmin", fields: [adminId], references: [id], onDelete: SetNull)

  // 구독 상태 (.net과 일관된 enum)
  subscriptionStatus SubscriptionStatus @default(trial)
  trialEndsAt        DateTime?
  expiresAt          DateTime?

  // 결제/세금계산서 고지용 필드 (.com에서 고객 안내)
  billingEmail  String?
  lastInvoiceAt DateTime?

  // 데이터 관리(보관/삭제 고지)
  canceledAt           DateTime?
  dataRetentionUntil   DateTime?
  deletionNoticeSentAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdBy])
  @@index([adminId])
  @@index([subscriptionStatus])
  @@index([expiresAt])
}

model VerificationSession {
  vid        String    @id @default(uuid())
  userId     String
  expiresAt  DateTime
  createdAt  DateTime  @default(now())
  verifiedAt DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([email, used])
}

model LoginHistory {
  id        String   @id @default(uuid())
  userId    String
  provider  String
  ip        String
  userAgent String
  location  String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model FcmToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
